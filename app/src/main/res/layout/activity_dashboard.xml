<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Greeting Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <!-- Circular Avatar -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_profile_2"
                    android:contentDescription="User Avatar"
                    android:background="@color/light_gray" />

                <!-- Greeting and Date -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/greetingMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, User!"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/teal" />

                    <TextView
                        android:id="@+id/currentDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fetching date..."
                        android:textSize="14sp"
                        android:textColor="@color/dark_blue" />
                </LinearLayout>
            </LinearLayout>

            <!-- Eco Tip of the Day -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/light_blue">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ± Eco Tip of the Day"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/almost_black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/ecoTipText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use reusable water bottles to save plastic waste."
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Total CO2e Emissions Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ Total CO2e Emissions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/teal"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/totalEmissions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fetching data..."
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Reduction Comparison Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/light_blue">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‰ Reduction Compared to Last Month"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/reductionComparison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fetching data..."
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Daily Emissions Trend -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/light_gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Daily Emissions Trend"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/almost_black"
                        android:layout_marginBottom="8dp" />

                    <FrameLayout
                        android:id="@+id/dailyEmissionsGraphContainer"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/graph_background" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/teal"
        app:itemTextColor="@color/teal"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
