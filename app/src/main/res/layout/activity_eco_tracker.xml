<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eco Tracker"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/button_drive_vehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drive Personal Vehicle" />

    <Button
        android:id="@+id/button_public_transport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Public Transportation" />

    <Button
        android:id="@+id/button_cycling_walking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cycling or Walking" />

    <Button
        android:id="@+id/button_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flight (Short-Haul or Long-Haul)" />

    <Button
        android:id="@+id/button_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal" />

    <Button
        android:id="@+id/button_new_clothes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy New Clothes" />

    <Button
        android:id="@+id/button_electronics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy Electronics" />

    <Button
        android:id="@+id/button_other_purchases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Purchases" />

    <Button
        android:id="@+id/button_energy_bills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Energy Bills" />

    <TextView
        android:id="@+id/textview_total_emissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:layout_gravity="center"
        android:text="Total Daily CO2e Emissions: 0.00 kg" />

    <!-- Only RecyclerView to handle scrolling -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_logged_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />


</LinearLayout>
